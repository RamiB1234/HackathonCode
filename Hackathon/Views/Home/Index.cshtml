@model IEnumerable<Hackathon.Models.Account>




<table class="table" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IqamaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfDep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.balance)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IqamaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberOfDep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                </tr>
            <tr>
                <td>
                    @*@Html.ActionLink("Refund", "Withdrow", new { accountId = item.ID }, htmlAttributes: new { @class = "btn btn-danger btn-block" })*@ 
                    @Html.ActionLink("Deposit", "Deposit", new { accountId = item.ID }, htmlAttributes: new { @class = "btn btn-success btn-block" }) 
                    @Html.ActionLink("Transfer", "Transfer", new { accountId = item.ID }, htmlAttributes: new { @class = "btn btn-warning btn-block" }) 
                    @Html.ActionLink("Transactions", "Transactions", new { accountId = item.ID }, htmlAttributes: new { @class = "btn btn-success btn-block" })
                    @Html.ActionLink("SubAccounts", "SubAccounts", new { accountId = item.ID }, htmlAttributes: new { @class = "btn btn-success btn-block " })  
                    @Html.ActionLink("Add Sub Account", "AddSubAccount", new { accountId = item.ID }, htmlAttributes: new { @class = "btn btn-primary btn-block " })

                </td>
                <td>
                    <b>Sub Accounts</b><br />
                    @foreach (var subAcc in item.SubAccounts)
                {
                        @: <label  style="color:blue"> Sub Account Name: </label><b>@subAcc.Name</b><br />
                        @: <label style="color:blue">Balance:</label> <b>@subAcc.balance</b>
                        @:<br />




}
</td>
            </tr>
          
        </tbody>

    }

</table>


<script>

    $(document).ready(function () {
        $("#datatable").dataTable();

    });
</script>


                   