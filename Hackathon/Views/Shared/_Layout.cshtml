<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Bank Hajj</title>


    @Styles.Render("~/Content/css")

    @RenderSection("Styles", required: false)

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <link href="~/Content/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/custom-themes.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/SideBarStyle.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @*<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">*@
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>




    <div class="page-wrapper chiller-theme toggled">
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div id="toggle-sidebar">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
                <div class="sidebar-brand">
                    <a class="logo pull-left" href="#">
                        <img runat="server" src='~/Img/AcigLO.png' style=" width:170px;height:70px " />
                    </a>
                    <h3 class=" brand-name ">Hackathon Hajj</h3>
                </div>
                <div class="sidebar-header">

                    <div class="user-pic ">
                        <img class="img-responsive img-rounded" src="~/Img/user.jpg" alt="User picture">
                    </div>
                    <div class="user-info ">
                        <span class="user-name">
                            Team 
                            <strong>E-012</strong>
                        </span>
                        <span class="user-role">Admin</span>
                        <span class="user-status">
                            <i class="fa fa-circle"></i>
                            <span>Online</span>
                        </span>
                    </div>
                </div>

                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span>Account control</span>
                        </li>
                        <li>
                            <a href="/Home/CreateAccount">
                                <i class="fa fa-check-square-o"></i>
                                <span>Create Account</span>
                            </a>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-check-square-o"></i>
                                <span>Manager</span>
                                @*<span class="label label-danger">New</span>*@
                            </a>
                            <div class="sidebar-submenu">
                                <ul>

                                    <li>
                                        @Html.ActionLink("Account Manager", "Index", "Home")
                                    </li>
                                    
                                </ul>
                            </div>
                        </li>
                        
                        </ul>
                </div>
                <!-- sidebar-menu  -->
            </div>
            <!-- sidebar-content  -->
            <div class="sidebar-footer">
                <a href="/Login/Logout">
                    <i class="fa fa-power-off"></i>

                </a>
            </div>
        </nav>
        <!-- sidebar-wrapper  -->
        }
        <main class="page-content">
            <div class="container-fluid">
                @RenderBody()
            </div>




            <hr />
            <div class="row"></div>
            <footer class=" copy-right">
                <p style="text-align:center">&copy; @DateTime.Now.Year - Bank Hajj</p>
            </footer>
    </div>

    }
    </main>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</body>

</html>
